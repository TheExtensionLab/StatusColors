        <helpers>
            <theextensionlab_statuscolors>
                <class>TheExtensionLab_StatusColors_Helper</class>
            </theextensionlab_statuscolors>
        </helpers>

        <models>
            <theextensionlab_statuscolors>
                <class>TheExtensionLab_StatusColors_Model</class>
